<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <ImageView
        android:id="@+id/wifiConnector"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="175dp"
        android:src="@drawable/wificonnection" />

    <com.example.wave.receiver.Fonts.TextViewFontStyle
        android:id="@+id/connector_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifiConnector"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:text="Connecting to WIFI"
        android:textColor="@color/black"
        android:textSize="18dp" />


</RelativeLayout>