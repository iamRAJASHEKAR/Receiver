<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="match_parent">

        <com.example.wave.receiver.Fonts.ButtonFontStyle
            android:id="@+id/btn_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@null"
            android:drawableRight="@drawable/ic_right_arrownew"
            android:text="Settings"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <com.example.wave.receiver.Fonts.ButtonFontStyle
            android:id="@+id/btn_network"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_settings"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableRight="@drawable/ic_right_arrownew"
            android:text="Network"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <com.example.wave.receiver.Fonts.ButtonFontStyle
            android:id="@+id/btn_sofup"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_network"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableRight="@drawable/ic_right_arrownew"
            android:text="Software Update"
            android:textAllCaps="false"
            android:textSize="18sp" />

        <com.example.wave.receiver.Fonts.ButtonFontStyle
            android:id="@+id/btn_information"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_sofup"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@null"
            android:drawableRight="@drawable/ic_right_arrownew"
            android:text="Information"
            android:textAllCaps="false"
            android:textSize="18sp" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>

</LinearLayout>
